<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gamma.todoapp.MainActivity">
    <LinearLayout
        android:layout_marginRight="5pt"
        android:layout_marginTop="2pt"
        android:layout_width="wrap_content"
        android:layout_height="25pt"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_gravity="center"
            android:layout_width="25pt"
            android:layout_height="25pt"
            android:background="@drawable/menu_icon"/>
        <EditText
            android:id="@+id/edtAdd"
            android:layout_width="130pt"
            android:layout_height="match_parent"
            android:hint="  Add items here"
            android:backgroundTint="#617e8c"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="15pt"
        android:layout_marginTop="2pt"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtClear"
            android:layout_marginLeft="15pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Completed"
            android:textStyle="bold"
            android:textColor="#465b65"
            android:textSize="7pt"/>
        <TextView
            android:id="@+id/txtCompleted"
            android:layout_marginLeft="15pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:textStyle="bold"
            android:textColor="#465b65"
            android:textSize="7pt"/>
        <TextView
            android:id="@+id/txtActive"
            android:layout_marginLeft="5pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textStyle="bold"
            android:textColor="#465b65"
            android:textSize="7pt"/>
        <TextView
            android:id="@+id/txtAll"
            android:layout_marginLeft="5pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:textStyle="bold"
            android:textColor="#465b65"
            android:textSize="7pt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>
</LinearLayout>
