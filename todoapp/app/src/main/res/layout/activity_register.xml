<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gamma.todoapp.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50pt">
        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="15pt"
            android:layout_marginLeft="25pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:fontFamily="monospace"
            android:textColor="#465b65"
            android:text="Register ," />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="25pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="#8e9fa7"
            android:fontFamily="monospace"
            android:text="Thank you for using" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10pt"
        android:layout_width="130pt"
        android:layout_height="25pt"
        android:layout_gravity="center">
        <EditText
            android:textColorHint="#8e9fa7"
            android:textSize="7pt"
            android:fontFamily="monospace"
            android:id="@+id/edtRegisterUsername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Username"
            android:textColor="#465b65"
            android:backgroundTint="#169ccc"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="130pt"
        android:layout_height="25pt"
        android:layout_gravity="center">
        <EditText
            android:textColorHint="#8e9fa7"
            android:textSize="7pt"
            android:fontFamily="monospace"
            android:id="@+id/edtRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Password"
            android:textColor="#465b65"
            android:inputType="textPassword"
            android:backgroundTint="#169ccc"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="130pt"
        android:layout_height="25pt"
        android:layout_gravity="center">
        <EditText
            android:textColorHint="#8e9fa7"
            android:textSize="7pt"
            android:fontFamily="monospace"
            android:id="@+id/edtRegisterConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Confirm Password"
            android:textColor="#465b65"
            android:inputType="textPassword"
            android:backgroundTint="#169ccc"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="130pt"
        android:layout_height="25pt"
        android:layout_gravity="center">
        <EditText
            android:textColorHint="#8e9fa7"
            android:textSize="7pt"
            android:fontFamily="monospace"
            android:id="@+id/edtFirstname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Firstname"
            android:inputType="text"
            android:textColor="#465b65"
            android:backgroundTint="#169ccc"/>
    </LinearLayout>
    <LinearLayout
        android:fontFamily="monospace"
        android:layout_width="130pt"
        android:layout_height="25pt"
        android:layout_gravity="center">
        <EditText
            android:textColorHint="#8e9fa7"
            android:textSize="7pt"
            android:fontFamily="monospace"
            android:id="@+id/edtLastname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Lastname"
            android:inputType="text"
            android:textColor="#465b65"
            android:backgroundTint="#169ccc"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txvNotificationRegister"
        android:layout_marginTop="5pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fa4141"
        android:textSize="6pt"
        android:layout_marginLeft="23pt"
        android:fontFamily="monospace"
        android:text=""
        />
        <TextView
            android:id="@+id/btnAccept"
            android:layout_marginLeft="25pt"
            android:layout_marginTop="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#169ccc"
            android:textStyle="bold"
            android:textSize="10pt"
            android:fontFamily="monospace"
            android:text="Accept" />
</LinearLayout>
