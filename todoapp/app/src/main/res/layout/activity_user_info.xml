<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gamma.todoapp.UserInfoActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50pt">
        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="15pt"
            android:layout_marginLeft="20pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:fontFamily="monospace"
            android:textColor="@color/colorTextStandard"
            android:text="@string/info_logo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20pt"
            android:layout_width="wrap_content"
            android:layout_height="35pt"
            android:textSize="8pt"
            android:textColor="@color/colorTextHint"
            android:fontFamily="monospace"
            android:text="@string/info_title" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5pt"
        android:layout_width="130pt"
        android:layout_height="12pt"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:textSize="7pt"
            android:gravity="center"
            android:textAlignment="textStart"
            android:fontFamily="monospace"
            android:text="@string/hint_username"
            android:layout_width="50pt"
            android:layout_height="match_parent"
            android:textColor="@color/colorTextHint"
            tools:ignore="RtlCompat" />
        <TextView
            android:textSize="8pt"
            android:fontFamily="monospace"
            android:id="@+id/txvProfileUsername"
            android:layout_width="80pt"
            android:layout_height="match_parent"
            android:textColor="@color/colorTextStandard" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5pt"
        android:layout_width="130pt"
        android:layout_height="12pt"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:textSize="7pt"
            android:gravity="center"
            android:textAlignment="textStart"
            android:fontFamily="monospace"
            android:text="@string/hint_firstname"
            android:layout_width="50pt"
            android:layout_height="match_parent"
            android:textColor="@color/colorTextHint"
            tools:ignore="RtlCompat" />
        <TextView
            android:textSize="8pt"
            android:fontFamily="monospace"
            android:id="@+id/txvProfileFirstname"
            android:layout_width="80pt"
            android:layout_height="match_parent"
            android:textColor="@color/colorTextStandard" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5pt"
        android:layout_width="130pt"
        android:layout_height="12pt"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:textSize="7pt"
            android:gravity="center"
            android:textAlignment="textStart"
            android:fontFamily="monospace"
            android:text="@string/hint_lastname"
            android:layout_width="50pt"
            android:layout_height="match_parent"
            android:textColor="@color/colorTextHint"
            tools:ignore="RtlCompat" />
        <TextView
            android:textSize="8pt"
            android:fontFamily="monospace"
            android:id="@+id/txvProfileLastname"

            android:layout_width="80pt"
            android:layout_height="match_parent"
            android:textColor="@color/colorTextStandard" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5pt"
        android:layout_width="130pt"
        android:layout_height="12pt"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:textSize="7pt"
            android:gravity="center"
            android:textAlignment="textStart"
            android:fontFamily="monospace"
            android:text="@string/info_userid"
            android:layout_width="50pt"
            android:layout_height="match_parent"
            android:textColor="@color/colorTextHint"
            tools:ignore="RtlCompat" />
        <TextView
            android:textSize="8pt"
            android:fontFamily="monospace"
            android:id="@+id/txvProfileUserId"
            android:layout_width="80pt"
            android:layout_height="match_parent"
            android:textColor="@color/colorTextStandard" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="30pt"
        android:layout_gravity="center"
        android:layout_width="130pt"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnProfileChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccept"
            android:textSize="9pt"
            android:fontFamily="monospace"
            android:text="@string/info_change_password" />
        <TextView
            android:layout_marginLeft="25pt"
            android:id="@+id/btnProfileBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccept"
            android:textSize="9pt"
            android:fontFamily="monospace"
            android:text="@string/info_back" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layAnimRegister">
        <TextView
            android:id="@+id/txvNotificationRegister"
            android:layout_marginTop="3pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNofiText"
            android:textSize="6pt"
            android:layout_marginLeft="25pt"
            android:fontFamily="monospace" />
    </LinearLayout>
</LinearLayout>
