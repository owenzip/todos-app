<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.example.gamma.todoapp.LoginActivity">

    <LinearLayout
        android:id="@+id/layTitleLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="45pt"
            android:layout_gravity="center"
            android:layout_marginTop="10pt"
            android:src="@drawable/ic_todos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="monospace"
            android:text="@string/login_app_name"
            android:textColor="@color/colorTextStandard"
            android:textSize="16pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25pt"
            android:fontFamily="monospace"
            android:text="@string/login_logo"
            android:textColor="@color/colorTextStandard"
            android:textSize="8pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="monospace"
            android:text="@string/login_title"
            android:textColor="@color/colorTextHint"
            android:textSize="6pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layBodyLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5pt"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="130pt"
            android:layout_height="20pt"
            android:layout_gravity="center"
            android:layout_marginTop="2pt"
            android:background="@drawable/item_border">

            <ImageView
                android:layout_width="10pt"
                android:layout_height="10pt"
                android:layout_gravity="center"
                android:layout_marginLeft="7pt"
                android:src="@drawable/ic_user" />

            <EditText
                android:id="@+id/edtUsername"
                android:layout_width="90pt"
                android:layout_height="match_parent"
                android:layout_marginLeft="5pt"
                android:backgroundTint="@color/colorWhite"
                android:fontFamily="monospace"
                android:hint="@string/hint_username"
                android:textColor="@color/colorTextStandard"
                android:textColorHint="@color/colorTextHint"
                android:textSize="6pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="130pt"
            android:layout_height="20pt"
            android:layout_gravity="center"
            android:layout_marginTop="2pt"
            android:background="@drawable/item_border">

            <ImageView
                android:layout_width="8pt"
                android:layout_height="8pt"
                android:layout_gravity="center"
                android:layout_marginLeft="7pt"
                android:src="@drawable/ic_pass" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="90pt"
                android:layout_height="match_parent"
                android:layout_marginLeft="5pt"
                android:backgroundTint="@color/colorWhite"
                android:fontFamily="monospace"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:textColor="@color/colorTextStandard"
                android:textColorHint="@color/colorTextHint"
                android:textSize="6pt" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10pt"
        android:layout_marginTop="5pt"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txvAnim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20pt"
            android:fontFamily="monospace"
            android:textColor="@color/colorNofiText"
            android:textSize="5pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35pt"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="130pt"
            android:layout_height="20pt"
            android:layout_gravity="center"
            android:layout_marginTop="10pt"
            android:background="@drawable/bg_button"
            android:fontFamily="monospace"
            android:text="@string/login_button_login"
            android:textColor="@color/colorWhite"
            android:textSize="10pt"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="23pt"
            android:fontFamily="monospace"
            android:text="@string/login_dont_have_accout"
            android:textColor="@color/colorTextHint"
            android:textSize="5pt" />

        <TextView
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5pt"
            android:fontFamily="monospace"
            android:text="@string/login_button_register"
            android:textColor="@color/colorTextHint"
            android:textSize="7pt"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
