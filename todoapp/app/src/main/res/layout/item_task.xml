<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="23pt"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="2pt"
                android:textColor="#f0f0f0"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/txvTaskId"
                android:layout_width="0pt"
                android:layout_height="0pt"
                />
            <EditText
                android:layout_marginLeft="10pt"
                android:id="@+id/edtTasks"
                android:layout_gravity="center"
                android:layout_width="125pt"
                android:textColor="#616e74"
                android:layout_height="25pt"
                android:text="This is my new tasks"
                android:backgroundTint="#f0f0f0" />

            <CheckBox
                android:layout_marginLeft="10pt"
                android:id="@+id/ckbStatus"
                android:backgroundTint="#616e74"
                android:layout_width="20pt"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.1pt"
            android:background="#dbe0e2">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
