<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/colorAccept" />
                    <gradient
                        android:startColor="@color/colorAccept"
                        android:centerColor="@color/colorAccept"
                        android:endColor="@color/colorAccept"
                        android:angle="270" />
                    <size
                        android:width="10pt"
                        android:height="10pt" />
                </shape>
            </item>

            <item
                android:width="5dp"
                android:height="2dp"
                android:top="12dp"
                android:left="6dp">
                <rotate
                    android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff"/>
                    </shape>
                </rotate>
            </item>

            <item
                android:width="11dp"
                android:height="2dp"
                android:top="11dp"
                android:left="8dp">
                <rotate
                    android:fromDegrees="-50">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>